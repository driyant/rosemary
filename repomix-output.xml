            py={{ lg: "2rem" }}
            mt={{ md: "1.5rem" }}
          >
            <Box
              w={{ base: "100%", lg: "49%" }}
              marginTop="2.5rem"
              py={{ lg: "1rem" }}
              px={{ lg: "0.5rem" }}
            >
              <Text
                letterSpacing="2px"
